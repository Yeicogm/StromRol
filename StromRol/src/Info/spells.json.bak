      "school": "Alteration",
      "caster": "wizard",
      "verbal": true,
      "somatic": true,
      "material": true,
      "materials": "a small whistle made of bone",
      "range": "Touch",
      "aoe": "Caster +1 creature/leve1",
      "casting_time": "1 turn",
      "duration": "1 hour/level",
